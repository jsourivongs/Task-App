<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Do It!</title>
</head>
<body>
    <div class="container">
        <h1>Do it</h1>
        <form action="/orderbyDate" method="GET">
            Order By: <input type="submit" name="Submit" class="btn btn-primary btn-sm" value="Date">
        </form>

        <form action="/orderbyClass" method="GET">
            Order By: <input type="submit" name="Submit" class="btn btn-primary btn-sm" value="Class">
        </form>
        <hr>
        <p>

            <% tasks.forEach(item => { %>
                <span><%= item.dueDate %></span>
                <span><%= item.description %></span>
                <span><strong><%= item.className %></strong></span>
                <form action=<%= "/deleteTask/" + item.subtaskID %> method="POST">
                    <input type="submit" name="Submit" class="btn btn-danger btn-sm" value="Delete">
                </form>

                <% item.subTasks.forEach(mItem => { %>
                    <li><%= mItem.description %></li>
                    <form action=<%= "/deleteSubTask/" + mItem.identifier %> method="POST">
                        <input type="submit" name="Submit" class="btn btn-danger btn-sm" value="Delete">
                    </form>
                <% }); %>
                    <form action=<%= "/addSubTask/" +  item.subtaskID %> method="POST">
                    <!-- <form action="/addSubTask" method="POST"> -->
                        Description: <input type="text" name="description" placeholder="description" required>
                        <input type="submit" name="Submit" class="btn btn-success btn-sm" value="Add">
                    </form>
                <hr>
            <% }); %>

        </p>
        <form action="/addTask" method="POST">
            Due Date: <input type="date" name="dueDate" placeholder="dueDate" required>
            Description: <input type="text" name="description" placeholder="description" required>
            class: <input type="number" name="classID" required>
            Submit: <input type="submit" name="Submit" class="btn btn-success" value="Add">
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>